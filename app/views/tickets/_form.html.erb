<!-- component -->
<div class="flex items-center bg-gray-50  mt-24">
    <div class="container w-4/5">
        <div class="mx-auto bg-white rounded-md shadow-sm">
            <div class="mx-2 mb-2">
                
                <%= form_with(model: ticket, local: true) do |f| %>

                    <!-- List erros-->
                    <% if ticket.errors.any? %>
                        <div id="error_explanation">
                        <h2><%= pluralize(ticket.errors.count, "error") %>
                          empeche l'enregistrement de ce ticket:
                        </h2>

                        <ul>
                            <% ticket.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                            <% end %>
                        </ul>
                        </div>
                    <% end %>

                    <!-- Customer Name and Contact-->
                    <div class="flex">
                        <div class="w-1/2 mb-2 ml-2">
                            <label for="name" class="block mb-2 text-sm text-gray-600 font-semibold ">Nom du client</label>
                            <%= f.text_field :full_name, name:"name", id:"name", placeholder:"Koffi kara",
                            class:"w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md
                             focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300" %>
                        </div>
                        <div class="w-1/2 mb-2 mx-2">
                            <label for="phone" class="block mb-2 text-sm text-gray-600 font-semibold ">Contact</label>
                            <%= f.number_field :contact, placeholder:"0544320020", id:"phone", name:"phone",
                             class:"w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md
                             focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300" %>
                            
                        </div>
                    </div>
                    <!-- Operation date, type service, Montant-->
                    <div class="flex">
                        <div class="w-1/3 mb-2 ml-2">
                            <label for="phone" class="text-sm text-gray-600 font-semibold">Type Service</label>
                            <%= f.select :service, Ticket::TYPE_SERVICE, wrapper: { class:"w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md
                                 focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300"}, placeholder:"Select" %>
                        </div>
                        <div class="w-1/3 mb-2 mx-2">
                            <label for="date" class="text-sm text-gray-600 font-semibold">Date Opération</label>
                            <%= f.date_select :operation, name:"operation", id:"operation", placeholder:"Date",
                             class:"w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md
                                 focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 " %>
                        </div>
                        <div class="w-1/3 mb-2 mx-2">
                            <label for="montant" class="text-sm text-gray-600 font-semibold">Montant</label>
                            <%= f.text_field :montant, name:"montant", id:"montant", placeholder:"Montant de l'opération", 
                                class:"w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md
                                 focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 " %>
                        </div>
                    </div>
                    <!-- Ref Trans and Ref Facturier-->
                    <div class="flex">
                        <div class="w-1/2 mb-2 mx-2">
                            <label for="name" class="block mb-2 text-sm text-gray-600  font-semibold">Ref Transaction</label>
                            <%= f.text_field :ref_operation, name:"name", id:"name", placeholder:"Reference Transaction",
                               class:"w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md
                             focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 " %>
                        </div>
                        <div class="w-1/2 mb-2 mx-2">
                            <label for="name" class="block mb-2 text-sm text-gray-600  font-semibold">Ref Facturier</label>
                            <%= f.text_field :ref_facturier, name:"name", id:"name", placeholder:"Reference Facturier",
                            class:"w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md
                             focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 " %>
                        </div>
                    </div>
                        
                    <div class="mb-2">
                        <label for="message" class="block mb-2 text-sm text-gray-600 font-semibold">Message</label>
                        <%= f.text_area :description, name:"message", id:"message", placeholder:"Votre Message",
                         class:"w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none
                         focus:ring focus:ring-indigo-100 focus:border-indigo-300" %>
                    </div>
                    
                    <div class="grid justify-items-stretch mb-4">
                        <%= f.submit "Créer Ticket" ,class:"justify-self-center px-2 py-2 text-white bg-red-500 rounded-md focus:bg-red-600 focus:outline-none" %>
                    </div>
                
                <% end %>
            </div>
        </div>
    </div>
</div>


